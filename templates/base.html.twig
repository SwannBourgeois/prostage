<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Prostage{% endblock %}</title>
        
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
       
       
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
       
        <!-- BLOCK DES FEUILLES DE STYLE -->
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            
        {% endblock %}


    </head>
    <body>
        <div class="container-fluid">
       
       
       <!-- BLOCK DU SLIDER -->
        {% block slider %}
        <div class="row">
		    <div class="col-md-12">
		    	<img alt="Logo Prostage" src="https://i.ibb.co/Qv4dGqc/logo.png" class="img-fluid" />
		    </div>
	    </div>
        {% endblock %}


        <!-- BLOCK DU MENU -->
        {% block menu %}
        <div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				 					
					<ul class="navbar-nav">
						
						<li class="nav-item active">
							 <a class="nav-link" href="{{path('metier_accueil')}}">Accueil <span class="sr-only"></span></a>
						</li>

						<li class="nav-item active">
							 <a class="nav-link" href="{{path('metier_entreprises')}}">Entreprises <span class="sr-only"></span></a>
						</li>

						<li class="nav-item active">
							 <a class="nav-link" href="{{path('metier_formations')}}">Formations <span class="sr-only"></span></a>
						</li>
					</ul>
				</div>
			</nav>
		</div>


        {% endblock %}


        <!-- BLOCK DU CONTENU -->
        {% block contenu %}
        <div class="row">
		    <div class="col-md-12">
		    </div>
	    </div>
        {% endblock %}


        <!-- BLOCK DU PIED DE PAGE -->
        {% block footer %}
        <div class="row">
		    <div class="col-md-12">
		    </div>
	    </div>     
        {% endblock %}


        <!-- BLOCK JAVASCRIPTS -->
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
        </div>
    </body>
</html>
