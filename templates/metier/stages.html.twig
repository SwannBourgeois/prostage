{% extends 'base.html.twig' %}

{% block title %}Prostage{% endblock %}

{% block contenu %}

<div class="container">
        <div class="list-group">
            <ul class="list-group list-group-flush">
                <li class="list-group-item center">
                    <img class="rounded mx-auto d-block" src="https://images.pexels.com/photos/270348/pexels-photo-270348.jpeg?auto=compress&cs=tinysrgb&h=650&w=940" width="400px">
                </li>
                <li class="list-group-item"><B>Stage : </B>{{stage.titre}}</li>
                <li class="list-group-item"><B>Description : </B>{{stage.descMission}}</li>
                <li class="list-group-item"><B>Entreprise : </B>{{stage.Entreprise.nom}}</li>
                <li class="list-group-item"><B>Activite : </B>{{stage.Entreprise.activite}}</li>
                <li class="list-group-item"><B>Email : </B>{{stage.emailContact}}</li>
                {% for formationCourante in stage.Formation %}
                <li class="list-group-item"><B>Formation : </B>{{formationCourante.nomCourt}}</li>
                {% endfor %} 
         </ul>
        </div>
</div>



{% endblock %}
