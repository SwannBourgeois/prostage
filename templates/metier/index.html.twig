{% extends 'base.html.twig' %}

{% block title %}Prostage{% endblock %}


{% block contenu %}
<style>
    .TitrePage { margin: 1em auto; max-width: 1000px; width: 80%; font: 18px/1.5 sans-serif; }
    .TitrePage code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="TitrePage">
    <h1>Bienvenue sur la page d'accueil de Prostages</h1>
</div>

<p>
Vous trouverez ci-dessous la liste des stages :
</p>



{% for stage in stages %}

<div class="card-deck">

  <div class="card">
    <div class="card-body">
      <a href="{{path('metier_stages',{id:stage.id})}}"><h5 class="card-title">{{stage.titre}}</h5></a>
      <p class="card-text"><B>Description : </B>{{stage.descMission}}</p>
      <p class="card-text"><B>Email : </B>{{stage.emailContact}}</p>
      <p class="card-text"><B>Entreprise : </B>{{stage.Entreprise.nom}}</p>
      {% for formationCourante in stage.Formation %}
      <p class="card-text"><B>Formation : </B>{{formationCourante.nomCourt}}</p>
      {% endfor %}
    </div>
  </div>
  
  <br/>
  
  
  {% endfor %}

{% endblock %}

