{% extends 'base.html.twig' %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>
    Stages de la formation {{formationsStage.nomLong}}
    </h1>
    
        {% for stage in formationsStage.formations %}
            <div class="card-deck">

                <div class="card">
                    <div class="card-body">
                        <a href="{{path('metier_stages', {id:stage.id})}}"><h5 class="card-title">{{ stage.titre }}</h5></a>
                        <p><B>Entreprise : </B>{{ stage.Entreprise.nom }}</p>
                        <p><B>Email : </B>{{ stage.emailContact }}</p>
                            {% for formationCourante in stage.Formation %}
                                <p><B>Formation : </B>{{ formationCourante.nomCourt }}</p>
                            {% endfor %}
                    </div>
                </div>
                <br/>
        {% endfor %}
        
</div>
{% endblock %}